#
# behat.yml file for testing on Pantheon.
#
default:
  suites:
    default:
      paths:
        - %paths.base%/features
        - %paths.base%/installer-features
        - %paths.base%/pantheon-features
        - %paths.base%/user-features
      contexts:
        - FeatureContext
        - Drupal\DrupalExtension\Context\DrupalContext
        - Drupal\DrupalExtension\Context\MinkContext
  extensions:
    Behat\MinkExtension:
      goutte: ~
      selenium2: ~
      files_path: './data-files'
      base_url: http://<%= ENV['PENV'] %>-<%= ENV['PSITE'] %><%= ENV['DOMAIN'] %>/
    Drupal\DrupalExtension:
      blackbox: ~
      api_driver: 'drush'
      drush:
        alias: '@pantheon-ci.<%= ENV['PSITE'] %>.<%= ENV['PENV'] %>'
